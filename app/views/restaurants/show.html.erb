<div class="container">
  <h1><%= @restaurant.name %></h1>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <p><%= @restaurant.category %></p>
  <p>Reviews<% @restaurant.reviews.each do |review| %>
    <p><%= review.content %></p>
    <p><%= review.rating %></p>
  <% end %></p>
  <%= link_to "Add review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
  <%= link_to "Edit restaurant", edit_restaurant_path, class: "btn btn-primary" %>
  <%= link_to "Back", restaurants_path, class: "btn btn-primary" %>
</div>

